<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <FrameLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_above="@+id/radioGroup_main_tab"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fine_line_height"
        android:layout_above="@+id/radioGroup_main_tab"
        android:background="@color/c7" />

    <RadioGroup
        android:id="@+id/radioGroup_main_tab"
        android:layout_width="match_parent"
        android:layout_height="49.0dip"
        android:layout_alignParentBottom="true"
        android:background="@color/c5"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/button_homepage"
            style="@style/NavibarBtnStyle"
            android:drawableTop="@drawable/btn_home"
            android:background="@drawable/btn_home" />

        <RadioButton
            android:id="@+id/button_hot_sale"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_sales" />

        <RadioButton
            android:id="@+id/button_special_topic"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_subject" />

        <RadioButton
            android:id="@+id/button_MyCat"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_mine" />
    </RadioGroup>
</RelativeLayout>
